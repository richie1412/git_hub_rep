<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- @drawable/shezhi -->
    <style name="floatwindow" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="popAlert" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/popUpActivityBackground</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 阴影 -->
    </style>

    <!-- checkBox -->
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>

    <style name="MyCheckBox_contactsLetter" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_contactsletter_selector</item>
    </style>

    <style name="GD_MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/gd_checkbox_selector</item>
    </style>

    <style name="MyCheckBox_01" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/checkbox_selector_01</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:maxHeight">10.0dip</item>
    </style>

    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="gd_home_tab_font">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textSize">@dimen/gd_hometab_fontsize</item>
    </style>

    <style name="gd_sms_quickinput_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/sms_detail_qucickinput_hei</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/sms_detail_qucickinput_item_marginleft</item>
        <item name="android:layout_marginRight">@dimen/sms_detail_qucickinput_item_marginleft</item>
        <item name="android:paddingLeft">@dimen/sms_detail_qucickinput_item_padleft</item>
        <item name="android:paddingRight">@dimen/sms_detail_qucickinput_item_padleft</item>
        <item name="android:layout_marginTop">@dimen/sms_detail_qucickinput_item_top</item>
        <item name="android:textColor">#1b1b1b</item>
        <item name="android:textSize">@dimen/fontsize_30</item>
    </style>
    <!-- listview d的基本属性 -->
    <style name="list_view_base_style">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@drawable/gd_gray_divider</item>
        <item name="android:scrollbars">none</item>
        <item name="android:paddingLeft">@dimen/list_view_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/list_view_horizontal_padding</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
    </style>

</resources>