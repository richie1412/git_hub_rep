<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/gd_setting_margin_left"
            android:paddingRight="@dimen/gd_setting_margin_right"
           
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gd_setting_switch_margin_top"
                android:background="@drawable/gd_setting_switch_bg"
                android:gravity="center" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gd_setting_switch_text_margin_left"
                    android:layout_weight="1"
                    android:text="开启私密短信提醒"
                    android:textColor="@color/gd_titlebar_text"
                    android:textSize="@dimen/gd_setting_switch_text_size" />

                <ImageView
                    android:id="@+id/gd_simisuo_tipopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/gd_setting_switch_btn_margin_right"
                    android:background="@drawable/gd_setting_switch_open" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gd_setting_text_margin_bottom"
                android:layout_marginLeft="@dimen/gd_setting_switch_text_margin_left"
                android:layout_marginTop="@dimen/gd_setting_text_margin_top"
                android:text="建议开启，当私密联系人给您短信时，通信助手客户端提醒您查收。"
                android:textColor="@color/gd_setting_text"
                android:textSize="@dimen/gd_setting_text_size" />

            <!-- 免费选择感兴趣... -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gd_setting_switch_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/gd_simi_changeemai"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gd_setting_switch_text_margin_left"
                    android:layout_weight="1"
                    android:text="修改关联的邮箱      "
                    android:textColor="@color/gd_titlebar_text"
                    android:textSize="@dimen/gd_setting_switch_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/gd_setting_switch_btn_margin_right"
                    android:background="@drawable/gd_sms_hz_arrow" />
            </LinearLayout>

            <!-- 发出的每条短信... -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gd_setting_text_margin_bottom"
                android:layout_marginLeft="@dimen/gd_setting_switch_text_margin_left"
                android:layout_marginTop="@dimen/gd_setting_text_margin_top"
                android:text="在忘记密码时，您可通过关联邮箱，获取校验码。"
                android:textColor="@color/gd_setting_text"
                android:textSize="@dimen/gd_setting_text_size" />

            <LinearLayout
                android:id="@+id/gd_ll_interest_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gd_setting_switch_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/gd_simisuo_resetpass"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gd_setting_switch_text_margin_left"
                    android:layout_weight="1"
                    android:text="重置密码"
                    android:textColor="@color/gd_titlebar_text"
                    android:textSize="@dimen/gd_setting_switch_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/gd_setting_switch_btn_margin_right"
                    android:background="@drawable/gd_sms_hz_arrow" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>