    <ListView
        android:id="@+id/gd_lv_private_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:cacheColorHint="@color/white"
        android:divider="@color/gd_item_line"
        android:dividerHeight="@dimen/gd_lv_line_height"
        android:fadingEdge="none"
        android:listSelector="@color/white"
        android:scrollbars="none"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/gd_ll_private_info_empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gd_private_lock_empty_first_margin_top"
            android:text="您还没有私密信息"
            android:textColor="@color/gd_setting_text"
            android:textSize="@dimen/gd_private_info_empty_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gd_private_lock_empty_second_margin_top"
            android:text="添加私密联系人，即保护你们的短信记录"
            android:textColor="@color/gd_setting_text"
            android:textSize="@dimen/gd_private_info_empty_text_size" />
    </LinearLayout>

</LinearLayout>