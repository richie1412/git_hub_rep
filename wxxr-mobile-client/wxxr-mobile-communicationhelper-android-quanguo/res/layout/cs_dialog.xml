<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pop_gray_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dialog_activity_horizontal_margin"
        android:layout_marginRight="@dimen/dialog_activity_horizontal_margin"
        android:background="@drawable/gd_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_add_or_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="17dip"
            android:layout_marginTop="10dip"
            android:text="添加提醒"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <include layout="@layout/gd_divide_gray" />

        <EditText
            android:id="@+id/tv_about_to"
            android:layout_width="@dimen/popmenu_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="17.5dip"
            android:layout_marginRight="17.5dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/gd_pinddao_item_normal_bg"
            android:focusable="false"
            android:gravity="center"
            android:hint="待办事项"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tv_person"
            android:layout_width="@dimen/popmenu_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="17.5dip"
            android:layout_marginRight="17.5dip"
            android:background="@drawable/gd_pinddao_item_normal_bg"
            android:focusable="false"
            android:gravity="center"
            android:hint="联系人"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/tv_alert_time"
            android:layout_width="@dimen/popmenu_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="17.5dip"
            android:layout_marginRight="17.5dip"
            android:background="@drawable/gd_pinddao_item_normal_bg"
            android:focusable="false"
            android:gravity="center"
            android:hint="提醒时间"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <include layout="@layout/ok_or_cancel_buttons" />
    </LinearLayout>

</LinearLayout>