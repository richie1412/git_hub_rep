<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_location_show"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/location_show"
        android:gravity="center" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/txzs_logo" />

        <TextView
            android:id="@+id/tv_location_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知电话"
            android:textColor="@color/location_show_text"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_location_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:textColor="@color/location_show_text"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>