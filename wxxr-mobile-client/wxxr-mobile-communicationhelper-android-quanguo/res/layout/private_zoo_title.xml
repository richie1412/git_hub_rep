<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_private_zoo_title_bar"
        style="@style/titlebar_height"
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- 取消 -->

        <LinearLayout
            android:id="@+id/ll_private_zoo_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/private_zoo_title_seletor"
                android:duplicateParentState="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_private_zoo_title_left"
                    style="@style/titlebar_textsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:duplicateParentState="true"
                    android:text="取 消"
                    android:textColor="@drawable/private_zoo_title_text_color_selector" />
            </LinearLayout>

            <include
                android:id="@+id/vi_private_zoo_title_stand_line_left"
                layout="@layout/private_zoo_titlebar_stand_line" />
        </LinearLayout>

        <!-- 个人中心 -->

        <LinearLayout
            android:id="@+id/ll_private_zoo_title_middle"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_private_zoo_title_middle"
                style="@style/titlebar_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- 更多 -->

        <LinearLayout
            android:id="@+id/ll_private_zoo_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <include layout="@layout/private_zoo_titlebar_stand_line_right" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/private_zoo_title_seletor"
                android:duplicateParentState="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_private_zoo_title_right"
                    style="@style/titlebar_textsize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:duplicateParentState="true"
                    android:text="保 存"
                    android:textColor="@drawable/private_zoo_title_text_color_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/title_bottom_line"
        layout="@layout/private_zoo_title_bottom_line" />

</LinearLayout>