<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_back"
    android:layout_width="fill_parent"
    android:layout_height="70dp" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/sms_status1"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/sms_status2"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/sms_status3"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_sendsms"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/sms_status_xinxi"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_call_phone"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/sms_status_tonghua"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:background="@drawable/head"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" >

                <TextView
                    android:id="@+id/tv_head_item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="兔兔"
                    android:textColor="@color/communication_tutu"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_head_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_head_item1"
                    android:text="(4)"
                    android:textColor="@color/communication_ziti"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_head_item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="4月12日"
                    android:textColor="@color/communication_ziti"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="11日16:21 致某某某短信送达"
                android:textColor="@color/communication_ziti"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/arrow"
            android:scaleType="fitXY" />
    </LinearLayout>

</FrameLayout>