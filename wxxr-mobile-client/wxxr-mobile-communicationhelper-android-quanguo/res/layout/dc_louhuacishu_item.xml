<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_back"
    android:background="#00ffffff"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/inner_temparrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/louhua_arrow"
        android:singleLine="true"
        android:visibility="gone"
        android:textColor="@color/leak_msg_head_count" />

    <TextView
        android:id="@+id/tv_head_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"  
        android:singleLine="true"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_toLeftOf="@id/inner_temparrow"
        android:text="-次"
        android:textColor="@color/leak_msg_head_date" />

    <LinearLayout
        android:id="@+id/inner_temprow1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <!--
             <ImageView
            android:id="@+id/iv_image1"
            style="@style/item_image1_marginLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/head"
            android:scaleType="fitXY" />
        -->



            <TextView
                android:id="@+id/tv_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textSize="18sp"
                android:text="-fff-"
                android:textColor="#5c5b5b" />

            <TextView
                android:id="@+id/tv_tel_place"
                style="@style/item_width2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_gravity="center_vertical"  
                android:singleLine="true"
                android:text="未知"
                android:textSize="18sp"
                android:textColor="@color/leak_msg_head_count"
                android:visibility="gone" />
       
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sendsms"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/sms_status_xinxi"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_call_phone"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/sms_status_tonghua"
        android:visibility="gone" />

    <View
        android:id="@+id/iv_call_phone_divline"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_below="@id/inner_temprow1"
        android:background="#cce1ea" />

</RelativeLayout>