<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_gray_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:text="选择头像的操作"
            android:textColor="@color/guishudi_black"
            android:textSize="@dimen/fontsize_30" />

        <include layout="@layout/gd_private_zoo_divide_gray" />

        <TextView
            android:id="@+id/tv_selecte_picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pick_icon_selector"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="从相册选择"
            android:textColor="@color/guishudi_black"
            android:textSize="@dimen/fontsize_30" />

        <include layout="@layout/gd_private_zoo_divide_gray" />

        <TextView
            android:id="@+id/tv_selecte_camare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pick_icon_selector"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="拍照"
            android:textColor="@color/guishudi_black"
            android:textSize="@dimen/fontsize_30" />

        <include layout="@layout/gd_private_zoo_divide_gray" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pick_icon_selector"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/guishudi_black"
            android:textSize="@dimen/fontsize_30" />
    </LinearLayout>

</LinearLayout>