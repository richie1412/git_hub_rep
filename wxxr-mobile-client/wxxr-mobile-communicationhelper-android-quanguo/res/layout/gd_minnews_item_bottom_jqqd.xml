<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/gd_wzx_item_bottom_height"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/gd_wzx_item_bottom_icon"
            android:layout_height="@dimen/gd_wzx_item_bottom_icon"
            android:background="@drawable/apps_caiyin" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="科技频道"
            android:textColor="@color/gd_detail_sendcolor"
            android:textSize="@dimen/fontsize_20" />
    </LinearLayout>

</LinearLayout>